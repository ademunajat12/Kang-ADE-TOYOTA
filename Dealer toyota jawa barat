</body><script>
  // Fungsi Simulasi Kredit
  document.getElementById("simulasiForm").addEventListener("submit", function(e) {
    e.preventDefault();
    let harga = parseInt(document.getElementById("harga").value);
    let dp = parseInt(document.getElementById("dp").value);
    let bunga = parseFloat(document.getElementById("bunga").value);
    let tenor = parseInt(document.getElementById("tenor").value);

    let pokokPinjaman = harga - dp;
    let bungaTotal = pokokPinjaman * (bunga / 100) * tenor;
    let totalBayar = pokokPinjaman + bungaTotal;
    let cicilanBulanan = totalBayar / (tenor * 12);

    document.getElementById("hasil").innerHTML = "Estimasi Cicilan per Bulan: <br><span style='color:green;'>Rp " + cicilanBulanan.toLocaleString() + "</span>";
  });

  // Fungsi Kirim WA
  function kirimWA(085871555477) {
    let nama = document.getElementById("nama").value;
    let nomor = document.getElementById("nomor").value;
    let link = `https://wa.me/6285871555477?text=Halo%20Kang%20Ade,%20saya%20${encodeURIComponent(nama)}.%20No%20HP%3A%20${encodeURIComponent(nomor)}.%20Saya%20ingin%20konsultasi%20pembelian%20mobil%20Toyota.`;
    window.open(link, '_blank');
    return false;
  }
</script>

